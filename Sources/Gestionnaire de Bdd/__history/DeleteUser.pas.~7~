procedure TDeleteUserForm.Button1Click(Sender: TObject);

var
 lHTTP: TIdHTTP;
 chaine,res : string;
begin
  lHTTP := TIdHTTP.Create;
  try
    chaine := 'http://ec2-34-247-50-129.eu-west-1.compute.amazonaws.com/deleteUser/5560715';
    res := lHTTP.Get(chaine);
    ShowMessage(res);
  finally
    lHTTP.Free;
  end;
end;
