{$R *.dfm}

procedure TCreateProductForm.Button1Click(Sender: TObject);
var
 numShop : Integer;
 lHTTP: TIdHTTP;
 chaine,res : string;
begin
  lHTTP := TIdHTTP.Create;
  try
    numShop := Random(1000000);
    chaine := 'http://ec2-34-247-50-129.eu-west-1.compute.amazonaws.com/createUser/'+ EditIdShop.Text +'/'+
     editproductName.Text + '/' + EditPrice.Text + '/' + EditTags.Text + '/' + EditType.Text;
    res := lHTTP.Get(chaine);
    ShowMessage(res);
  finally
    lHTTP.Free;
  end;
end;
end.
